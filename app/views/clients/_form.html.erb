<h1><%= params[:action].titleize %> Client</h1>
<%= form_for client do |f| %>
    <% if @client.errors.any? %>
      <h2>Errors:</h2>
        <ul>
        <% client.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
        </ul>
    <% end %>

    <div class="mb-3 row">
      <%= f.label :first_name, class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.text_field :first_name, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :last_name, class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.text_field :last_name, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :address, 'Home Address', class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.text_field :address, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.text_field :email, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :phone, 'Phone Number', class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.text_field :phone, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :website, class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.text_field :website, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :description, class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.text_area :description, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :image, class: "col-sm-2 col-form-label" %></br>
      <div class="col-sm-10">
        <%= f.file_field :image %>
      </div>
    </div>
    <p>
      <%= f.submit %>
    </p>
    <%= link_to 'Back', clients_path, class:"btn btn-dark" %>
<% end %>
