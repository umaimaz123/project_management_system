<h1>All Clients</h1>
<% if current_user %>
<div class="d-flex flex-row-reverse">
  <div class="p-1">
    <%= link_to 'New Client', new_client_path, class:"btn btn-dark" %>
  </div>
  <div class="p-1">
    <%= link_to 'New Project', new_project_path, class:"btn btn-dark" %>
  </div>
  <div class="p-1">
    <%= link_to 'All Project', projects_path, class:"btn btn-dark" %>
  </div>
</div>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Home Address</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Website</th>
      <th>Description</th>
      <th colspan = "3"> Operations</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client|%>
    <tr>
      <td>
        <%= client.first_name %>
      </td>
      <td>
        <%= client.last_name %>
      </td>
      <td>
        <%= truncate(client.address, length:10) %>
      </td>
      <td>
        <%= client.email %>
      </td>
      <td>
        <%= client.phone %>
      </td>
      <td>
        <%= truncate(client.website, length:10) %>
      </td>
      <td>
        <%= truncate(client.description, length:10) %>
      </td>
      <td>
        <%= link_to 'Show', client_path(client), class:"btn btn-dark" %>
        <% if current_user %> 
          <%= link_to 'Edit', edit_client_path(client), class:"btn btn-dark" %>
          <%= link_to 'Delete', client_path(client), method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-dark" %>
        <% end %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>
