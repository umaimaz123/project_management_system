<h1>All Clients</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Home Address</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Website</th>
      <th>Description</th>
      <th colspan = "3"> Operations</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client|%>
    <tr>
      <td>
        <%= client.first_name %>
      </td>
      <td>
        <%= client.last_name %>
      </td>
      <td>
        <%= client.address %>
      </td>
      <td>
        <%= client.email %>
      </td>
      <td>
        <%= client.phone %>
      </td>
      <td>
        <%= client.website %>
      </td>
      <td>
        <%= client.description %>
      </td>
      <td>
        <%= link_to 'Show details', client_path(client) %>
        <% if current_user %> 
          | <%= link_to 'Edit client details', edit_client_path(client) %> |
          <%= link_to 'Delete client', client_path(client), method: :delete, data: {confirm: 'Are you sure?'}%>
        <% end %>

      </td>
    </tr>
  <% end %>

  </tbody>
</table>
<% if current_user %>
  <%= link_to 'Create new client', new_client_path %>
<% end %>
