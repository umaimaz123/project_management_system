<h1><%=params[:action].titleize %> User</h1>
<%= form_for(user, url: manage_users_path, html: {method: "post"})do |f| %>
  <% if user.errors.any? %>
  <h2>Errors:</h2>
    <ul>
    <% user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="mb-3 row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %></br>
    <div class="col-sm-10">
      <%= f.text_field :email, required: true, class:"form-control" %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %></br>
    <div class="col-sm-10">
      <%= f.password_field :password, class:"form-control" %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %></br>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class:"form-control" %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :role, 'Role for user', class: "col-sm-2 col-form-label" %></br>
    <div class="col-sm-10">
      <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
    </div>
  </div>
  <p>
    <%= f.submit %>
  </p>
  <%= link_to 'Back', manage_users_path, class:"btn btn-dark" %>

<% end %>