<h1>All Users</h1>
<div class="d-flex flex-row-reverse">
  <% if current_user %>
    <div class="p-1">
      <%= link_to 'New user', new_manage_user_path, class:"btn btn-dark" %>
    </div>
  <% end %>
  <div class="p-1">
    <%= link_to 'Back', clients_path, class:"btn btn-dark" %> 
   </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan = "3"> Operations</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.role %>
      </td>
      <td>
        <%= link_to 'Show',manage_user_path(user), class:"btn btn-dark" %>
        <% if current_user.try(:admin?) %> 
          <%#= link_to 'Edit', edit_manage_user_path(user), class:"btn btn-dark" %>
          <%= link_to 'Delete',manage_user_path(user) ,method: :delete , data: {confirm: 'Are you sure?'}, class:"btn btn-dark" %>
        <% end %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>
