<h1><%=params[:action].titleize %> Project</h1>
<%= form_for project do |f| %>
  <% if project.errors.any? %>
  <h2>Errors:</h2>
    <ul>
    <% project.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="mb-3 row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %></br>
    <div class="col-sm-10">
      <%= f.text_field :title, required: true, class:"form-control" %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %></br>
    <div class="col-sm-10">
      <%= f.text_area :description, class:"form-control" %>
    </div>
  </div>
  <p>
    <%= f.submit %>
  </p>
  <%= link_to 'Back', clients_path, class:"btn btn-dark" %>

<% end %>